<!DOCTYPE dwr PUBLIC "-//GetAhead Limited//DTD Direct Web Remoting 2.0//EN" "http://getahead.org/dwr/dwr20.dtd">
<dwr>
	<allow>
		<create creator="spring" javascript="TagService">
			<param name="beanName" value="tagService" />
            <include method="getResource"/>
            <include method="saveResource"/>
            <include method="findResources"/>
            <include method="getRecentTags"/>
		</create>
		<convert converter="bean" match="com.byeight.tags.to.*"/>
	</allow>
</dwr>